# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION - Mundo Tango
# ============================================================================
# Copy this file to `.env.production` and fill in your production values
# NEVER commit the actual .env.production file to version control!
# ============================================================================

# ============================================================================
# DATABASE
# ============================================================================
# Replit auto-provisions this for deployments
DATABASE_URL=postgresql://username:password@host:5432/mundotango_production

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# Generate secure random strings:
# openssl rand -base64 32
SESSION_SECRET=change-this-to-random-256-bit-secret
JWT_SECRET=change-this-to-random-256-bit-secret
SECRETS_ENCRYPTION_KEY=change-this-to-random-256-bit-secret

# ============================================================================
# SUPABASE (Required for Real-time Features)
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================================================
# STRIPE (Payment Processing)
# ============================================================================
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
VITE_STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================================================
# AI SERVICES
# ============================================================================
# OpenAI (GPT-4, Embeddings)
OPENAI_API_KEY=sk-your-openai-api-key

# Groq (Llama 3.1 - Mr. Blue AI)
GROQ_API_KEY=gsk_your-groq-api-key

# Anthropic (Optional - Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ============================================================================
# REDIS (Optional but Recommended)
# ============================================================================
# Upstash: https://upstash.com
# Redis Cloud: https://redis.com/try-free/
REDIS_URL=redis://username:password@host:6379

# ============================================================================
# EMAIL SERVICE (Choose one)
# ============================================================================
# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# OR AWS SES
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# ============================================================================
# MONITORING & ERROR TRACKING
# ============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Prometheus (Metrics - no config needed, built-in)
# Access metrics at: /metrics

# ============================================================================
# CLOUDINARY (Image/Video Hosting)
# ============================================================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=production
PORT=5000

# CORS Origins (comma-separated)
CORS_ORIGINS=https://mundotango.life,https://www.mundotango.life

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# OPTIONAL SERVICES
# ============================================================================
# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub (Optional - for integrations)
GITHUB_TOKEN=ghp_your-github-token

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================
ENABLE_WEBSOCKETS=true
ENABLE_VOICE_AI=true
ENABLE_LIFE_CEO=true
ENABLE_VISUAL_EDITOR=true
ENABLE_ANALYTICS=true
ENABLE_CACHING=true

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
DB_POOL_SIZE=20
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=2000

CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================================================
# DEPLOYMENT INFO
# ============================================================================
APP_NAME=Mundo Tango
APP_URL=https://mundotango.life
APP_VERSION=1.0.0
DEPLOYMENT_ENVIRONMENT=production
