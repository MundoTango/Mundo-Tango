# Playwright Docker Environment for E2E Testing
FROM mcr.microsoft.com/playwright:v1.40.0-jammy

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy test files
COPY tests/ ./tests/
COPY playwright.config.ts ./

# Copy application files (needed for server-side testing)
COPY . .

# Expose port for development server
EXPOSE 5000

# Default command: run all tests
CMD ["npx", "playwright", "test"]
